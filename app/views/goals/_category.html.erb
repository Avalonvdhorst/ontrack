<%= f.fields_for :category do |category| %>
  <%= f.input :id, collection: Category.all + [Category.new(name: "Custom")], include_blank: true, label: false %>
  <%= f.input :name, label: false %>
  <%= f.fields_for :goal_category do |category| %>
    <%= category.input :score, as: :integer, label: false %>
  <% end %>
<% end %>
